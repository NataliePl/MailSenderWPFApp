<Window x:Class="MailSenderApp.ServerEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:data="clr-namespace:MailSenderApp.Data"
 xmlns:local="clr-namespace:MailSenderApp"
 Title="Почтовый сервер"
 WindowStartupLocation="CenterOwner"
 Width="330" Height="300">
    <DockPanel Margin="5">
        <GroupBox DockPanel.Dock="Left" Header="Список серверов" MinWidth="130" MaxWidth="160">
            <ListBox  ItemsSource="{x:Static data:TestData.Servers}"></ListBox>
        </GroupBox>
        <GroupBox Header="Редактировать данные">
            <StackPanel>
                
            </StackPanel>
        </GroupBox>
    </DockPanel>
</Window>
